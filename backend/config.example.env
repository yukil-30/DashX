# DashX Backend Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=restaurant_user
POSTGRES_PASSWORD=restaurant_password
POSTGRES_DB=restaurant_db
DATABASE_URL=postgresql://restaurant_user:restaurant_password@postgres:5432/restaurant_db

# =============================================================================
# LLM Configuration
# =============================================================================
# Available adapters: stub, local, ollama, huggingface
LLM_ADAPTER=stub

# Stub LLM Service (development)
LLM_STUB_URL=http://llm-stub:8001

# Local LLM Service (production-ready local inference)
# Enable this to use the local LLM instead of the stub
ENABLE_LOCAL_LLM=false
LOCAL_LLM_URL=http://local-llm:8080

# Local LLM Resource Configuration
LOCAL_LLM_CTX=2048           # Context window size
LOCAL_LLM_THREADS=4          # CPU threads for inference
LOCAL_LLM_GPU_LAYERS=0       # GPU layers (0 = CPU only)
LOCAL_LLM_STUB_MODE=false    # Set true to run without model (canned responses)
LOCAL_LLM_CPUS=1.0           # CPU limit for container
LOCAL_LLM_MEMORY=2g          # Memory limit for container

# Ollama (optional, for larger models)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# HuggingFace (optional, local transformers)
HF_MODEL=gpt2

# LLM Response Cache
LLM_CACHE_TTL=3600           # Cache TTL in seconds

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# Application
# =============================================================================
DEBUG=true

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8000
