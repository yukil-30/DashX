# Test Environment Configuration

# Database
DATABASE_URL=postgresql://restaurant_user:restaurant_password@localhost:5432/restaurant_db_test

# Mock Services (set to false to use real services)
USE_MOCK_LLM=true
USE_MOCK_STT=true
USE_MOCK_NLP=true

# Real Service URLs (used when USE_MOCK_* = false)
LOCAL_LLM_URL=http://localhost:8001
STT_URL=http://localhost:8002/v1/transcribe
NLP_URL=http://localhost:8003/v1/analyze

# Backend URL
